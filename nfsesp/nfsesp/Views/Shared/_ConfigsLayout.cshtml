<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NFSESP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/configslayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/nfsesp.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="config-grid">
        <div class="config--header-container">
            <button class="btn-voltar" id="btn-voltar" type="button"><i class="bi bi-arrow-left"></i> Voltar</button>
            <h2>Configurações</h2>
        </div>

        <div class="config--navbar-container">
            <nav>
                <ul>
                    <li><a>Empresa</a></li>
                    <li><a>Código de Serviço</a></li>
                    <li><a>Taxas/Impostos</a></li>
                </ul>
            </nav>
        </div>

        <div class="config--content-container">
            <main>
                @RenderBody()
            </main>    
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
